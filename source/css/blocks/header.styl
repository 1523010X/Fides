.header
  position relative
  padding 33px 0
  background linear-gradient(180deg, #FFFFFF 19.83%, rgba(255, 255, 255, 0.32) 85.37%)

  &__wrap
    display flex
    justify-content space-between
    align-items center

  &__logo
    max-width 111px
    object-fit contain

  &__nav
    max-width 55%

  &__list
    display flex

  &__item
    margin-right 65px
    &:last-child
      margin-right 0

  &__link
    position relative
    font-weight $bold
    letter-spacing 0.02em
    transition color 0.2s ease-in-out
    z-index 10
    &:hover:not(:focus-visible)
      color $blue
    &:active:not(:focus-visible)
      color $blue
    &:focus
      color $black
    &:focus-visible
      color $white
      outline none
      &::before
        content ""
        position absolute
        top 50%
        left 50%
        width 100%
        height 100%
        padding 3px 6px
        background-color $blue
        transform translate(-50%,-50%)
        border-radius 3px
        z-index -1

  &__info
    max-width 35%
    display flex
    align-items center

  &__phone
    position relative
    padding-left 28px
    font-weight $bold
    letter-spacing 0.012em
    color $blue
    background url("../img/icons/phone.svg") left center no-repeat
    &:hover:not(:focus-visible)
      color $blue
    &:active:not(:focus-visible)
      color $blue
    &:focus
      color $blue
    &:focus-visible
      color $blue
      outline none

  &__btn
    margin-left 27px
